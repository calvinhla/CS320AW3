<Window x:Class="Assignment3.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment3"
        mc:Ignorable="d"
        Title="SecondWindow" Height="450" Width="800">
    <Grid Margin="10">
        <ListView x:Name="uxList" GridViewColumnHeader.Click="ColumnHeader_Click">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="120"  DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Password" Width="180" DisplayMemberBinding="{Binding Password}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
